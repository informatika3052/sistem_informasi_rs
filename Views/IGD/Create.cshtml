@model sistem_informasi_rs.Models.IgdViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>PENDAFTARAN Pasien IGD</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active"> Pendaftaran Pasien IGD</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-8">
                    <div class="card">
                        <div class="card-header bg-success">
                            <h3 class="card-title">Pendaftaran Pasien IGD</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" asp-controller="IGD">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="id_pasien" class="control-label">ID Pasien</label>
                                    <input name="id_pasien" readonly value="@Html.DisplayFor(model => model.id_pasien)"
                                        class="form-control" />
                                    <span asp-validation-for="id_pasien" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Nama Pasien</label>
                                    <input name="nama" readonly value="@Html.DisplayFor(model => model.nama)"
                                        class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="tanggal_daftar" class="control-label">Tanggal Daftar</label>
                                    <input asp-for="tanggal_daftar" type="date" class="form-control" />
                                    <span asp-validation-for="tanggal_daftar" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label name="nama_dokter" class="control-label">Nama Dokter</label>
                                    <select name="id_dokter" class="custom-select" id="select-dokter">

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="tarif" class="control-label">tarif</label>
                                    <input asp-for="tarif" class="form-control" />
                                    <span asp-validation-for="tarif" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success mt-3">Simpan Data Pasien </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Button trigger modal -->
            </div>
        </div>
    </section>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
