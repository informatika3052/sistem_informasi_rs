@model IEnumerable<simrs.Models.PasienViewModel>
@{
    ViewData["Title"] = "Pasien Lama";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>MASTER DATA PASIEN</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pasien Lama</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header bg-success">
                            <h2 class="card-title">Data Pasien</h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> Nama </th>
                                        <th> Nik </th>
                                        <th> Jenis Kelamin </th>
                                        <th> Tanggal Lahir </th>
                                        <th> Alamat </th>
                                        <th class="text-center"> Status Kunjungan</th>
                                    </tr>
                                </thead>
                                <tbody> @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (@item.status_kunjungan)
                                                {
                                                    <p class="readonly">@Html.DisplayFor(modelItem =>
                                                item.nama)</p>
                                                }
                                                else
                                                {
                                                    <a asp-action="CreatePasienLama" asp-controller="IGD"
                                                asp-route-id="@item.nik_pasien">@Html.DisplayFor(modelItem => item.nama)
                                                    </a>
                                                }
                                            </td>
                                            <td> @Html.DisplayFor(modelItem => item.nik_pasien) </td>
                                            <td> @Html.DisplayFor(modelItem => item.jk_pasien) </td>
                                            <td> @item.tl_pasien?.ToString("dd-MM-yyyy") </td>
                                            <td> @Html.DisplayFor(modelItem => item.alamat_pasien) </td>
                                            <td class="text-center">
                                                @if (@item.status_kunjungan)
                                                {
                                                    <a class="btn btn-danger disabled">Kunjungan</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-info disabled">Tidak Ada Kunjungan</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


