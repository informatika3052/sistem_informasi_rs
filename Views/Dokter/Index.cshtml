@model IEnumerable<sistem_informasi_rs.Models.DokterViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>MASTER DATA DOKTER</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Master Data Dokter</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header bg-success">
                            <h2 class="card-title">Data Dokter</h2>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-success mt-4 ml-4" asp-action="Create">Tambah Data Dokter</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th> Nama </th>
                                        <th> Nik </th>
                                        <th> Jenis Kelamin </th>
                                        <th> Alamat </th>
                                        <th> Spesialis </th>
                                        <th class="text-center" style="width: 15%;"> Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>    
                                    @{
                                    int i = 1;
                                     }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i
                                                @{
                                                    i++; 
                                                } 
                                            </td>
                                            <td> @Html.DisplayFor(modelItem => item.nama_dokter) </td>
                                            <td> @Html.DisplayFor(modelItem => item.nik) </td>
                                            <td> @Html.DisplayFor(modelItem => item.jenis_kelamin) </td>
                                            <td> @Html.DisplayFor(modelItem => item.alamat) </td>
                                            <td> @Html.DisplayFor(modelItem => item.spesialis) </td>
                                            <td class="text-center"> 
                                                <a class="btn btn-warning" asp-action="Edit"                                                asp-route-id="@item.nik">Edit </a>
                                                <a class="btn btn-danger ml-1"        
                                             asp-action="Delete" asp-route-id="@item.nik">Delete </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


