@model sistem_informasi_rs.Models.DokterViewModel
@{
    ViewData["Title"] = "Delete";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-10">
                    <div class="card">
                        <div class="card-header bg-success">
                            <h2 class="card-title">Data Dokter</h2>
                        </div>
                        <div class="form-group">
                            <h3 class="text-center mt-4"> Anda Yakin Ingin Menghapus Data Dokter ??</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <form asp-action="Delete">
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Nama</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control"
                                            value="@Html.DisplayFor(model => model.nama_dokter) ">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Nik</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control"
                                            value="@Html.DisplayFor(model => model.nik) ">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Alamat</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control"
                                            value="@Html.DisplayFor(model => model.alamat) ">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Spesialis</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control"
                                            value="@Html.DisplayFor(model => model.spesialis) ">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Jenis Kelamin</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control"
                                            value="@Html.DisplayFor(model => model.jenis_kelamin) ">
                                    </div>
                                </div>
                                <input type="hidden" asp-for="nik" class="btn btn-danger mt-3" />
                                <input type="submit" value="Delete Data Dokter" class="btn btn-danger mt-3" />
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</div>
