@model IEnumerable<simrs.Models.IgdViewModel>
@{
    ViewData["Title"] = "Kasir";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DATA PEMBAYARAN</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="IGD">Home</a></li>
                        <li class="breadcrumb-item active">Data Pembayaran</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header bg-success">
                            <h2 class="card-title">Data Pembayaran</h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered">
                                <thead>
                                    <tr class="text-center">
                                        <th style="width: 10%;"> ID Kunjungan </th>
                                        <th style="width: 5%;"> ID Pasien </th>
                                        <th style="width: 18%;"> Nama Pasien </th>
                                        <th style="width: 22%;"> Dokter </th>
                                        <th style="width: 15%;"> Tgl Kunjungan </th>
                                        <th style="width: 15%;"> Lunas </th>
                                        <th> Confirm</th>
                                    </tr>
                                </thead>
                                <tbody> @foreach (var item in Model)
                                    {
                                        <tr class="text-center">

                                            <td> @Html.DisplayFor(modelItem => item.id_kunjungan) </td>
                                            <td> @Html.DisplayFor(modelItem => item.id_pasien) </td>
                                            <td> @Html.DisplayFor(modelItem => item.nama) </td>
                                            <td> @Html.DisplayFor(modelItem => item.nama_dokter) </td>
                                            <td class="text-center"> @Html.DisplayFor(modelItem => item.tanggal_daftar)
                                            </td>
                                            <td class="text-center">
                                                @if (@item.status_bayar)
                                                {
                                                    <a class="btn btn-danger disabled">Lunas</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-info disabled">Belum Lunas</a>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (@item.status_bayar)
                                                {
                                                    <a class="btn btn-primary disabled">
                                                        <i class="fas fa-money-bill-wave mr-1"></i>Bayar
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-primary " asp-action="Pembayaran"
                                                asp-route-id="@item.id_kunjungan">
                                                        <i class="fas fa-money-bill-wave mr-1"></i>Bayar
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
